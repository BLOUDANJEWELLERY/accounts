generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  accountNo String
  name      String
  phone     String
  civilId   String
  createdAt DateTime @default(now())
}

model Voucher {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  accountId   String
  voucherType String
  date        DateTime
  rows        String   // JSON array of rows
  totalNet    Float
  totalKWD    Float
  createdAt   DateTime @default(now())
  pdfUrl      String?
}


