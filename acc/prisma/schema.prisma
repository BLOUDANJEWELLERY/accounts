generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  accountNo String
  name      String
  phone     String
  civilId   String
  createdAt DateTime @default(now())
}

model Invoice {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId String
  items      String   // stored as JSON string
  notes      String?
  createdAt  DateTime @default(now())
}
